#include <stdio.h>

int main() {
    int numero;  // Declaracion de la variable para almacenar el nÃºmero

    printf("Ingresa un nÃumero entero: ");
    scanf("%d", &numero);

    // Condicional para verificar si el numero es par o impar
    if (numero % 2 == 0) {
        printf("El numero %d es par.\n", numero);
    } else {
        printf("El numero %d es impar.\n", numero);
    }

    return 0;
}
